import tkinter as tk

window = tk.Tk()
window.title("AÅŸk Oyunu ğŸ’˜")
window.geometry("800x600")  # BurayÄ± bÃ¼yÃ¼ttÃ¼k
window.configure(bg="mistyrose")
window.resizable(False, False)

label = tk.Label(window, text="Beni seviyor musun?", font=("Helvetica", 22), bg="mistyrose")
label.pack(pady=60)

buttons_frame = tk.Frame(window, bg="mistyrose")
buttons_frame.pack()


def ask_main_question():
    label.config(text="Beni seviyor musun?")
    clear_buttons()
    buttons_frame.pack_forget()
    buttons_frame.pack(pady=30)

    add_button("Evet elvinim ğŸ’–", handle_yes, side=tk.LEFT)
    add_button("HayÄ±r ğŸ˜¢", handle_no, side=tk.LEFT)


def handle_yes():
    label.config(text="Ä°ÅŸte buu! ğŸ˜")
    clear_buttons()
    add_button("Tamam", ask_love_level)


def handle_no():
    label.config(text="Hadi amaa... ğŸ™„")
    clear_buttons()
    add_button("Tamam", ask_main_question)


def clear_buttons():
    for widget in buttons_frame.winfo_children():
        widget.destroy()


def add_button(text, command, side=tk.TOP):
    btn = tk.Button(buttons_frame, text=text, font=("Helvetica", 16), command=command, bg="lightblue", padx=30, pady=15)
    btn.pack(padx=20, pady=20, side=side)


def ask_love_level():
    label.config(text="Ne kadar seviyorsun?")
    clear_buttons()
    buttons_frame.pack_forget()
    buttons_frame.pack(pady=30)

    add_button("DÃ¼nyalar kadar elvinim â¤ï¸", handle_love, side=tk.LEFT)
    add_button("Sevmiyorum ğŸ˜’", handle_lie, side=tk.LEFT)


def handle_love():
    label.config(text="Ben de seni seviyorum hayatÄ±m ğŸ’˜")
    clear_buttons()


def handle_lie():
    label.config(text="YalancÄ±Ä±Ä±! ğŸ˜ ")
    clear_buttons()
    add_button("Tamam", ask_love_level)


ask_main_question()
window.mainloop()
